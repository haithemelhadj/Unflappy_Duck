<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="styles.css" fx:controller="tn.esprit.controller.UserProfileController" spacing="20" alignment="CENTER" styleClass="user-profile-container">
    <!-- Profile Image -->
    <ImageView fx:id="profileImageView" fitHeight="150" fitWidth="150" />

    <!-- User Name -->
    <Label fx:id="userNameLabel" styleClass="profile-name" />

    <!-- User Email -->
    <Label fx:id="userEmailLabel" styleClass="profile-email" />

    <!-- User Role -->
    <Label fx:id="userRoleLabel" styleClass="profile-role" />

    <!-- User XP -->
    <Label fx:id="userXpLabel" styleClass="profile-xp" />

    <!-- Edit Profile Button -->
    <Button fx:id="editProfileButton" text="Edit Profile" onAction="#handleEditProfile" />

    <!-- Logout Button -->
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" />

    <!-- Back to Home Button -->
    <Button fx:id="backButton" text="Back to Home" onAction="#handleBackToHome" />
</VBox>
