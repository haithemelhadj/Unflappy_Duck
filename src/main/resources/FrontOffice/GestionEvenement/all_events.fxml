<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="tn.esprit.controller.AllEventsController" spacing="10" alignment="TOP_CENTER">
    <!-- Title Label -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste de tous les événements" />

    <!-- TilePane for Grid-like Layout -->
    <TilePane fx:id="eventsGridContainer" prefColumns="2" hgap="10" vgap="10" />

    <!-- Spacer to push the button to the bottom -->
    <Region VBox.vgrow="ALWAYS" />

    <!-- Go Back Button at the bottom -->
    <Button onAction="#goBack" text="Retour à l'ajout d'événements" />
</VBox>