<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="tn.esprit.controller.QuizController">
    <children>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="600">
            <Label text="Cour Management System" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 10;"/>

            <GridPane hgap="10" vgap="10" prefWidth="550">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="400"/>
                </columnConstraints>

                <!-- Question Number -->
                <Label text="Question Number:"/>
                <TextField fx:id="questionNumberField" GridPane.columnIndex="1"/>

                <!-- Question Text -->
                <Label text="Question Text:" GridPane.rowIndex="1"/>
                <TextField fx:id="questionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Answers -->
                <Label text="Answer 1 (A):" GridPane.rowIndex="2"/>
                <TextField fx:id="answer1Field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Answer 2 (B):" GridPane.rowIndex="3"/>
                <TextField fx:id="answer2Field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Answer 3 (C):" GridPane.rowIndex="4"/>
                <TextField fx:id="answer3Field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Answer 4 (D):" GridPane.rowIndex="5"/>
                <TextField fx:id="answer4Field" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <!-- Correct Answer -->
                <Label text="Correct Answer:" GridPane.rowIndex="6"/>
                <ComboBox fx:id="correctAnswerCombo" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Question" onAction="#handleAddQuestion" style="-fx-pref-width: 120;"/>
                <Button text="Update Question" onAction="#handleUpdateQuestion" style="-fx-pref-width: 120;"/>
                <Button text="Delete Question" onAction="#handleDeleteQuestion" style="-fx-pref-width: 120;"/>
            </HBox>

            <!-- Search -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Search questions..." style="-fx-pref-width: 300;"/>
                <Button text="Search" onAction="#handleSearch"/>
            </HBox>

            <!-- List View -->
            <ListView fx:id="questionListView" prefHeight="250" prefWidth="550"/>

            <!-- XP Progress -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="XP Progress:"/>
                <ProgressBar fx:id="xpProgressBar" prefWidth="200"/>
                <Label fx:id="xpLabel" text="0/100 XP"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
